    input -> l3_token_split;
    l3_token_split -> l3_qkv_proj -> l3_attention -> l3_out_proj -> l3_gather -> l3_attn_res;
    input -> l3_attn_res [style=dashed, color=blue, label="Residual"];

    l3_attn_res -> l3_gate;
    l3_attn_res -> l3_router;
    l3_router -> l3_exp0 -> l3_agg;

    layernorm_1_attn -> q_proj_1
    layernorm_1_attn -> k_proj_1
    layernorm_1_attn -> v_proj_1
    q_proj_1 -> attention_1
    k_proj_1 -> attention_1
    v_proj_1 -> attention_1
    attention_1 -> o_proj_1

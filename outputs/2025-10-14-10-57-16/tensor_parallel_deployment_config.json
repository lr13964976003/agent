{
  "deployment_strategy": "tensor_parallel_layer_wise",
  "total_gpus": 16,
  "gpu_distribution": {
    "tensor_parallel_groups": 4,
    "gpus_per_group": 4,
    "layers_per_group": 4
  },
  "tensor_parallelism": {
    "attention": {
      "qkv_projection": "column_parallel",
      "output_projection": "row_parallel",
      "heads_per_gpu": 4
    },
    "mlp": {
      "linear1": "column_parallel",
      "linear2": "row_parallel",
      "hidden_dim_per_gpu": 8192
    }
  },
  "communication_pattern": {
    "within_layer": "all_reduce",
    "between_layers": "pipeline_parallel"
  },
  "memory_optimization": {
    "activation_checkpointing": true,
    "gradient_accumulation": true
  },
  "load_balancing": {
    "compute_per_gpu": "balanced",
    "memory_per_gpu": "balanced"
  }
}